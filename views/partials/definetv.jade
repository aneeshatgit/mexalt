include navbar
.row
	form(role="form" class="form-horizontal col-lg-12")
		div(class="form-group")
			label #{__('TV Operator Name: ')} 
			//Nombre Operador TV: 
			br
			input(type='text' ng-model='tvName')
			br
			label #{__('Source: ')} 
			//Fuente: 
			br
			input(type='text' ng-model='source' style="width: 45%")
			br
			br
			button(type="button" class="btn btn-primary" ng-click="addTv()") #{__('Add Operator')} 
			//Adicionar Operador
.row
	table(class="table table-hover")
		thead
			th #{__('Operator Name')}  
			//Nombre Operador
			th
		tbody
			tr(ng-if="tvArr=={}") 
				td #{__('No operators defined')}  
				//No se encontraron operadores
			tr(ng-repeat="(key, tv) in tvArr")
				//td {{key}}
				td {{tv.name}}
				td
					span(class="glyphicon glyphicon-minus-sign" ng-click="deleteTv(key)")

