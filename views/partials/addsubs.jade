div
	form(role="form" class="form-horizontal col-lg-12")
		div(class="form-group")
			label Número de Abonado Móvil: 
			&nbsp;
			&nbsp;
			input(type='text' ng-model='subNum')
			span(style="color: red; margin-left: 3px"){{numError}}
		div(class="form-group")
			label ID de Celda: 
			&nbsp;
			&nbsp;
			input(type='text' ng-model='cgi')
			span(style="color: red; margin-left: 3px"){{cgiError}}
		div(class="form-group")
			button(type="button" class="btn btn-primary" ng-click="addSubscriber()") Agregar Abonado
	br
	div(class="col-lg-6")
		table(class="table table-hover")
			thead
				th Numero de Abonado
				th ID de Celda
				th
			tbody
				tr(ng-if="subscibersArr=={}") 
					td No subscibers found.
				tr(ng-repeat="sub in subscibersArr" )
					td {{sub.num}}
					td {{sub.cgi}}
					td
						span(class="glyphicon glyphicon-minus-sign" ng-click="deleteSubscriber(sub.num, sub.cgi)")

div.modal.fade(id="savedMessage" aria-hidden="true" please-wait style="margin-top: 200px")
	div.modal-dialog
		div.modal-content
			div.modal-header
				h3(align="center") Please wait...
			div.modal-body
				div.progress.progress-striped.active
					div.progress-bar(role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
